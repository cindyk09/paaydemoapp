<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Paay - Checkout</title>
  </head>

  <body>


    <div class="container-fluid">
      <div class="row">
        <%=form_for @transaction do |f| %>

        <!-- Credit Card Paymnet Form Start -->
        <section class="border-top pt30 pb30 mt40 mb10">
          <div class="col-sm-12 mt40">
            <h3 class="text-center no-margin mb20-xs">Payment</h3>
            <hr style="width:556px;" class="double-hr hidden-xs mt20 mb30">
          </div>
          <div class="col-sm-12 col-lg-4 col-md-offset-4 ">
              <fieldset>
                <div class="form-group">
                  <!-- Hidden SDK Transaction ID -->
                  <input type="hidden" name="transactionId" data-threeds="id" value="" />
                </div>
                <!-- Amount Div Start -->
                <div class="form-group row">
                  <label class="col-sm-3 control-label" for="card-number">Amount</label>
                  <div class="col-sm-7">
                    <%= f.text_field :amount, class:"form-control", id:"amount", name:"amount", placeholder:"$100", required: ""  %>
                  </div>
                </div>
                <!-- Amount Div End -->
                <div class="form-group row">
                  <label class="col-sm-3 control-label" for="card-holder-name">Name on Card</label>
                  <div class="col-sm-7">
                    <%= f.text_field :card_name, name:"card-holder-name", class:"form-control", id:"card-holder-name", placeholder:"John Doe", required: ""  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 control-label" for="card-number">Card Number</label>
                  <div class="col-sm-7">
                    <%= f.text_field :card_name, name:"ccNum", class:"form-control", id:"card_number", placeholder:"Card Number", required: ""  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
                  <label class="col-sm-1 control-label" for="card-number">Month</label>
                  <div class="col-sm-2">
                    <%= f.text_field :card_name, name:"month", class:"form-control", id:"month", placeholder:"01", required: ""  %>
                  </div>
                  <label class="col-sm-1 control-label" for="card-number">Year</label>
                  <div class="col-sm-2">
                    <%= f.text_field :card_name, name:"year", class:"form-control", id:"year", placeholder:"11", required: ""  %>
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
                  <div class="col-sm-2">
                    <%= f.text_field :card_name, name:"cvv", class:"form-control", id:"cvv", placeholder:"123", required: ""  %>
                  </div>
                </div>

                <div class="col-sm-12 col-lg-4 col-md-offset-4 ">
                  <input type="submit" name="submit" class="btn btn-rw btn-primary btn-lg pull-right"><span class="ion-ios7-arrow-right"></span></input> </div>
                </div>
              </fieldset>

          </div>
        </section>
        <!-- Credit Card Payment Form End -->


      </form>
      <%end %>
      </div>
    </div>

    <!-- Paay SDK javascript library -->
    <script src="https://cdn.3dsintegrator.com/threeds-min-v1.6.0.js"></script>
    <script type="application/javascript">
    var tds = new ThreeDS("billingForm","http://localhost/integration.php", {verbose:true, rebill:40});
    tds.init();
    </script>
    <br>
  </body>


</html>
